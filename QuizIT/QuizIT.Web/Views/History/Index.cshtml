@using QuizIT.Service.Entities
@using QuizIT.Service.Models
@using QuizIT.Common.Models
@model List<History>

@{
    ViewData["Title"] = "QuizIT | Lịch sử làm đề";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
    var paginationModel = ViewBag.PaginationModel as PaginationModel;
    var filter = ViewBag.Filter as FilterHistory;
}

<h1 class="cotent-title">Lịch sử làm đề</h1>
<div class="content-card mt-4">
    @if (Model.Count == 0)
    {
        <p class="text-center mt-4">Không có dữ liệu</p>
    }
    else
    {
        int index = 1;
        <div class="table-responsive mt-4">
            <table class="table">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Bộ đề</th>
                        <th>Thời gian hoàn thành</th>
                        <th>Số điểm</th>
                        <th>Ngày làm</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var history in Model)
                    {
                        int second = Convert.ToInt32(history.TimeDoExam * 60);
                        <tr>
                            <td>@((filter.PageNumber - 1)*filter.PageSize + index)</td>
                            @*<td class="mx-200">
                                    <a href="~/lich-su/chi-tiet/@history.Id" data-title="@history.ExamName.Trim()">@history.ExamName.Trim()</a>
                                </td>*@
                            <td>@history.Exam.ExamName.Trim()</td>
                            <td>@((second/60) + " phút " + (second%60) + " giây")</td>
                            <td>@history.Point</td>
                            <td>@history.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                        index++;
                    }

                </tbody>
            </table>
        </div>
        <div class="pagination d-flex align-items-center">
            <ul class="d-flex align-items-center">
                @if (paginationModel.PageNumber > 1)
                {
                    <li><a href="~/lich-su@(filter.GetQueryString(1, filter.ExamId))"><i class='bx bx-chevrons-left'></i></a></li>
                    <li><a href="~/lich-su@(filter.GetQueryString(filter.PageNumber - 1, filter.ExamId))"><i class='bx bx-chevron-left'></i></a></li>
                }
                @foreach (var item in paginationModel.Pages)
                {
                    <li><a href="~/lich-su@(filter.GetQueryString(item, filter.ExamId))" class="@(item == paginationModel.PageNumber ? "active" : "")">@item</a></li>
                }

                @if (paginationModel.PageNumber < paginationModel.TotalPage)
                {
                    <li><a href="~/lich-su@(filter.GetQueryString(filter.PageNumber + 1, filter.ExamId))"><i class='bx bx-chevron-right'></i></a></li>
                    <li><a href="~/lich-su@(filter.GetQueryString(paginationModel.TotalPage, filter.ExamId))"><i class='bx bx-chevrons-right'></i></a></li>
                }
            </ul>
        </div>
    }
</div>

